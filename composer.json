{
    "name": "smartjson/pay",
    "description": "专注 Alipay 和 WeChat 的支付扩展包",
    "keywords": ["alipay", "wechat", "pay"],
    "type": "library",
    "support": {
        "issues": "https://github.com/smartjson/pay/issues",
        "source": "https://github.com/smartjson/pay"
    },
    "authors": [
        {
            "name": "smartjson",
            "email": "jason@smartjson.cn"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-openssl": "*",
        "ext-simplexml":"*",
        "smartjson/supports": "^1.4",
        "monolog/monolog": "^1.23",
        "symfony/http-foundation": "^3.0|^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "mockery/mockery": "1.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "SmartJson\\Pay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SmartJson\\Pay\\Tests\\": "tests"
        }
    },
    "license": "MIT"
}
